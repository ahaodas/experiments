{
    "compilerOptions": {
        "types": ["vite-plugin-glsl/ext"],
        "moduleResolution": "Node",
        "module": "es2022",
        "target": "ES2017",
        "baseUrl": ".",
        "paths": {
            "@mobile-app/*": ["./src/MobileApp/*"],
            "@shaders/*": ["./src/shaders/*"],
            "@desktop-app/*": ["./src/DesktopApp/*"],
            "@assets/*": ["./src/assets/*"],
            "utils/*": ["./src/utils/*"],
            "components/*": ["./src/components/*"]
        },
        "jsx": "react",
        "allowSyntheticDefaultImports": true
    }
}
