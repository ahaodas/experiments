{
    "compilerOptions": {
        "moduleResolution": "Node",
        "module": "es2022",
        "target": "ES2017",
        "baseUrl": ".",
        "paths": {
            "@mobile-app/*": ["./src/MobileApp/*"],
            "@desktop-app/*": ["./src/DesktopApp/*"],
            "utils/*": ["./src/utils/*"],
            "components/*": ["./src/components/*"]
        },
        "jsx": "react",
        "allowSyntheticDefaultImports": true
    }
}
